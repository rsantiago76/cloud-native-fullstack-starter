{
  "family": "cloud-native-fullstack-starter-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "REPLACE_EXECUTION_ROLE_ARN",
  "taskRoleArn": "REPLACE_TASK_ROLE_ARN",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "REPLACE_IMAGE",
      "essential": true,
      "portMappings": [
        { "containerPort": 8000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "JWT_SECRET", "value": "change_me" },
        { "name": "CORS_ORIGINS", "value": "http://localhost:5173" },
        { "name": "DATABASE_URL", "value": "sqlite:///./app.db" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cloud-native-fullstack-starter-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
